<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
<shape android:shape="rectangle" >

    <corners
        android:radius="14dp"
        />
    <solid
        android:color="#24074C"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="270dp"
        android:height="60dp"
        />
</shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >

            <corners
                android:radius="14dp"
                />
            <solid
                android:color="#4C1D8E"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>
    </item>
</selector>